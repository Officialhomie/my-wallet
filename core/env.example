# Backend Environment Variables
# Copy this file to .env and fill in your values

# Test Mnemonic (BIP-39 seed phrase)
# IMPORTANT: Use a test mnemonic only - NEVER use a mnemonic with real funds
# This mnemonic is used to generate deterministic wallet addresses for testing
TEST_MNEMONIC=your_test_mnemonic_phrase_here

# Server Configuration
PORT=3001

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# RPC Endpoints for Blockchain Networks
# Add your RPC URLs for the networks you want to test on
ETHEREUM_SEPOLIA_RPC=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
BASE_SEPOLIA_RPC=https://sepolia.base.org
OPTIMISM_SEPOLIA_RPC=https://sepolia.optimism.io
POLYGON_MUMBAI_RPC=https://rpc-mumbai.maticvigil.com

# USDC Token Addresses (optional, for ERC-20 testing)
USDC_SEPOLIA_ADDRESS=0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238
USDC_BASE_SEPOLIA_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

